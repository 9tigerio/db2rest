                <version>2.15.1</version>
            </dependency>

            <dependency>
                <groupId>io.github.nstdio</groupId>
                <artifactId>rsql-parser</artifactId>
                <version>2.2.1</version>
            </dependency>

            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>3.12.0</version>
