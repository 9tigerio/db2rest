    <packaging>jar</packaging>
    <name>app</name>

    <dependencies>
        <dependency>
            <groupId>com.github</groupId>
            <artifactId>db2rest-spring-boot-starter</artifactId>
        </dependency>
        <dependency>
            <groupId>com.github</groupId>
            <artifactId>db2rest-mongo-spring-boot-starter</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
